{
	"eslint.debug": true,
	"eslint.format.enable": true,
	"eslint.validate": ["html", "javascript", "javascriptreact"],
	"eslint.alwaysShowStatus": true,

	"eslint.enable": true,

	"eslint.packageManager": "npm",
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"search.exclude": {
		"package-lock.json": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": ["source.addMissingImports", "source.fixAll.eslint"],
	"jest.autoRun": {
		"watch": false // Start the jest with the watch flag
		// "onStartup": ["all-tests"] // Run all tests upon project launch
	},
	"jest.showCoverageOnLoad": true, // Show code coverage when the project is launched
	"jest.autoRevealOutput": "on-exec-error", // Don't automatically open test explorer terminal on launch
	// Multiple language settings for json and jsonc files
	"[json][jsonc][yaml]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.ignorePath": ".gitignore",
	"i18n-ally.localesPaths": ["public/locales"],
	"i18n-ally.keystyle": "nested", // Don't run prettier for files listed in .gitignore
	"scss.validate": false,
	"css.validate": false,
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#161515",
		"activityBar.background": "#161515",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		"activityBarBadge.background": "#961301",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#e7e7e799",
		"sash.hoverBorder": "#161515",
		"statusBar.background": "#161515",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#161515",
		"statusBarItem.remoteBackground": "#161515",
		"statusBarItem.remoteForeground": "#e7e7e7",
		"titleBar.activeBackground": "#161515",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#161515",
		"titleBar.inactiveForeground": "#e7e7e799"
	},
	"peacock.color": "#270d15"
}
